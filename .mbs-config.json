{
    "project": "mbs-example-monorepo",
    "log": {
        "level": "info",
        "color": true
    },
    "remote_cache": {
        "push": false,
        "volume": null,
        "docker_registry": null
    },
    "timeout": 600,
    "files_profile": {
        "ex": [
            ".formatter.exs",
            "mix.{exs,lock}",
            "config/*.exs",
            "{apps,lib,test}/**/*.{ex,exs}"
        ],
        "rs": [
            "Cargo.{toml,lock}",
            "{src,tests}/**/*.rs"
        ],
        "ts": [
            "!node_modules/**/*",
            "**/*.ts",
            "package-lock.json",
            "package.json",
            "tsconfig.json",
            ".npmignore"
        ],
        "js": [
            "!node_modules/**/*",
            "**/*.js",
            "package-lock.json",
            "package.json",
            ".npmignore"
        ],
        "js-cache": [
            "package-lock.json",
            "package.json"
        ]
    }
}